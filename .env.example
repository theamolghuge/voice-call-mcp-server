# Server configuration
PORT=3004

# Twilio API credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_NUMBER=your_twilio_number

# Voice processing mode: "openai" or "vosk_coqui"
VOICE_PROCESSING_MODE=openai

# OpenAI API configuration (used when VOICE_PROCESSING_MODE=openai)
OPENAI_API_KEY=your_openai_api_key
OPENAI_WEBSOCKET_URL=wss://api.openai.com/v1/realtime?model=gpt-4o-mini-realtime-preview

# Vosk + Coqui TTS configuration (used when VOICE_PROCESSING_MODE=vosk_coqui)
VOSK_MODEL_PATH=./models/vosk-model-en-us-0.22
COQUI_TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
COQUI_TTS_SPEAKER=

# Chat API configuration (for Vosk+Coqui mode)
CHAT_API_PROVIDER=openai
# Options: "openai" or "openrouter"

# OpenAI Chat API configuration (used when CHAT_API_PROVIDER=openai)
OPENAI_CHAT_API_KEY=your_openai_api_key_for_chat

# OpenRouter API configuration (used when CHAT_API_PROVIDER=openrouter)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3-sonnet-20240229
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Ngrok authentication token
NGROK_AUTHTOKEN=your_ngrok_authtoken

